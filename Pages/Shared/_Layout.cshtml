<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VitrineExpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VitrineExpress.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">VitrineExpress</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownGerenciar" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Gerenciar
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownGerenciar">
                                    <li><h6 class="dropdown-header">Lojas</h6></li>
                                    <li><a class="dropdown-item" asp-page="/Lojas/Create">Cadastrar Nova Loja</a></li>
                                    <li><a class="dropdown-item" asp-page="/Lojas/Index">Minhas Lojas</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header">Produtos</h6></li>
                                    <li><a class="dropdown-item" asp-page="/Produtos/Create">Cadastrar Novo Produto</a></li>
                                    <li><a class="dropdown-item" asp-page="/Produtos/Index">Meus Produtos</a></li>
                                </ul>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    Olá, @User.Identity.Name!
                                </span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Deslogar</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - VitrineExpress - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>