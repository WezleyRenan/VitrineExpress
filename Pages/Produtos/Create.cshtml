@page
@model VitrineExpress.Pages.Produtos.CreateModel

@{
    ViewData["Title"] = "Cadastrar Novo Produto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <form method="post">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="my-0 font-weight-normal">Informações do Produto</h4>
                    </div>
                    <div class="card-body">
                        <p class="card-text mb-4">Preencha os detalhes do produto que deseja vender.</p>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-warning" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Produto.LojaId" class="form-label fw-bold">Loja</label>
                                <select asp-for="Produto.LojaId" asp-items="Model.LojasDoUsuario" class="form-select">
                                    <option value="">-- Selecione a loja --</option>
                                </select>
                                <small class="form-text text-muted">Escolha a qual de suas lojas este produto pertence.</small>
                                <span asp-validation-for="Produto.LojaId" class="text-danger"></span>
                            </div>

                            <div class="col-md-8 mb-3">
                                <label asp-for="Produto.Nome" class="form-label fw-bold"></label>
                                <input asp-for="Produto.Nome" class="form-control" placeholder="Ex: Tênis de Corrida UltraLeve" />
                                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Produto.Preco" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input asp-for="Produto.Preco" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Produto.Descricao" class="form-label fw-bold"></label>
                            <textarea asp-for="Produto.Descricao" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Produto.Categoria" class="form-label fw-bold"></label>
                                <select asp-for="Produto.Categoria" asp-items="Model.Categorias" class="form-select"></select>
                                <span asp-validation-for="Produto.Categoria" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Produto.Subcategoria" class="form-label fw-bold"></label>
                                <select asp-for="Produto.Subcategoria" asp-items="Model.Subcategorias" class="form-select"></select>
                                <span asp-validation-for="Produto.Subcategoria" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Produto.Estoque" class="form-label fw-bold"></label>
                                <input asp-for="Produto.Estoque" class="form-control" type="number" />
                                <span asp-validation-for="Produto.Estoque" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3">Configurações de Visibilidade</h5>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="Produto.Disponivel" class="form-check-input" />
                            <label asp-for="Produto.Disponivel" class="form-check-label">Produto disponível para venda?</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="Produto.EmDestaque" class="form-check-input" />
                            <label asp-for="Produto.EmDestaque" class="form-check-label">Destacar este produto na página inicial?</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="Produto.ControlaEstoque" class="form-check-input" />
                            <label asp-for="Produto.ControlaEstoque" class="form-check-label">Habilitar controle de estoque?</label>
                        </div>

                    </div>
                    <div class="card-footer bg-light text-end">
                        <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
                        <input type="submit" value="Cadastrar Produto" class="btn btn-primary" />
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}