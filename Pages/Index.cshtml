@page
@model IndexModel
@{
    ViewData["Title"] = "Página Inicial";
}

<div class="container mt-4">

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="display-6 border-bottom pb-2 mb-4">Lojas em Destaque</h2>
        </div>

        @if (Model.LojasDestaque.Any())
        {
            @foreach (var loja in Model.LojasDestaque)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        @* Você pode adicionar uma imagem da loja aqui no futuro *@
                        @* <img src="..." class="card-img-top" alt="Logo da Loja"> *@
                        <div class="card-body">
                            <h5 class="card-title">@loja.Nome</h5>
                            <p class="card-text text-muted">@loja.Descricao</p>
                            <a href="#" class="btn btn-outline-primary">Ver Loja</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Nenhuma loja em destaque no momento.</p>
        }
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="display-6 border-bottom pb-2 mb-4">Produtos em Destaque</h2>
        </div>

        @if (Model.ProdutosDestaque.Any())
        {
            @foreach (var produto in Model.ProdutosDestaque)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @* Você pode adicionar uma imagem do produto aqui no futuro *@
                        @* <img src="..." class="card-img-top" alt="Imagem do Produto"> *@
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@produto.Nome</h5>
                            <p class="card-subtitle mb-2 text-muted">Vendido por: @produto.Loja.Nome</p>
                            <p class="card-text flex-grow-1">@produto.Descricao</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-5 fw-bold text-primary">@produto.Preco.ToString("C")</span>
                                <a href="#" class="btn btn-primary">Ver Produto</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-muted">Nenhum produto em destaque no momento.</p>
        }
    </div>
</div>